/*
 * helloworld.c: simple test application
 */

#include <stdio.h>
#include "platform.h"

#include "sleep.h"
#include "xil_io.h"
#include "oled.h"


int main()
{
    init_platform();

	Xil_Out32(OLED_BASE_ADDR,0xff);
	OLED_Init();
	OLED_ShowString(0,0, "CUIJINBIRD");
	OLED_Refresh_Gram();
	while(1);

    return 0;
}
